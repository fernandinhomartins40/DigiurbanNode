{
  "name": "digiurban-backend",
  "version": "1.0.0",
  "description": "Backend da aplicação DigiUrban - Sistema de Gestão Municipal",
  "main": "dist/app.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "build": "tsc --skipLibCheck --noImplicitAny false --noImplicitThis false --noImplicitReturns false",
    "start": "node dist/app.js",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "db:generate": "prisma generate --schema=../schema.prisma",
    "db:push": "prisma db push --schema=../schema.prisma",
    "db:migrate": "prisma migrate dev --schema=../schema.prisma",
    "db:migrate:deploy": "prisma migrate deploy --schema=../schema.prisma",
    "db:migrate:reset": "prisma migrate reset --schema=../schema.prisma",
    "db:seed": "tsx src/database/seed.ts",
    "db:studio": "prisma studio --schema=../schema.prisma",
    "db:validate": "prisma validate --schema=../schema.prisma",
    "migrate:from-knex": "tsx scripts/migrate-from-knex.ts",
    "postinstall": "npm run db:generate"
  },
  "dependencies": {
    "@prisma/client": "^5.8.0",
    "@types/express-validator": "^2.20.33",
    "@types/ioredis": "^4.28.10",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "glob": "^11.0.3",
    "helmet": "^7.0.0",
    "ioredis": "^5.7.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "prom-client": "^15.1.3",
    "rate-limiter-flexible": "^2.4.2",
    "resend": "^6.0.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.8",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.0.2",
    "prisma": "^5.8.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  }
}
