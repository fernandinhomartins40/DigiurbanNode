# ====================================================================
# Copie este arquivo para .env e configure suas variÃ¡veis
# ====================================================================

# Database Configuration (Prisma)
DATABASE_URL="file:./data/digiurban.db"

# Para desenvolvimento
DATABASE_URL_DEV="file:./data/digiurban-dev.db"

# Para testes
DATABASE_URL_TEST="file:./data/digiurban-test.db"

# Para produÃ§Ã£o (exemplo)
DATABASE_URL_PROD="file:/app/data/digiurban.db"

# Prisma Configuration
PRISMA_GENERATE_DATAPROXY="false"
PRISMA_CLI_QUERY_ENGINE_TYPE="binary"

# Application Environment
NODE_ENV="development"
PORT="3021"

# JWT Configuration
JWT_SECRET="seu_jwt_secret_muito_seguro_aqui"
JWT_REFRESH_SECRET="seu_jwt_refresh_secret_muito_seguro_aqui"
JWT_EXPIRES_IN="24h"
REFRESH_TOKEN_EXPIRES_IN="7d"

# Cookie Security
COOKIE_SECRET="seu_cookie_secret_muito_seguro_aqui"
COOKIE_DOMAIN="localhost"

# ====================================================================
# ðŸ“§ CONFIGURAÃ‡Ã•ES DE E-MAIL - RESEND.COM
# ====================================================================

# Resend API Key (obtenha em: https://resend.com/api-keys)
RESEND_API_KEY="seu_resend_api_key_aqui"

# ConfiguraÃ§Ãµes do Remetente
FROM_EMAIL="noreply@seudominio.com.br"
FROM_NAME="DigiUrban"

# URLs da AplicaÃ§Ã£o
FRONTEND_URL="http://localhost:3000"
API_URL="http://localhost:3021/api"

# Rate Limiting de E-mails
EMAIL_RATE_LIMIT_PER_HOUR="100"
EMAIL_RATE_LIMIT_PER_DAY="1000"

# Token Lifetimes
PASSWORD_RESET_TOKEN_LIFETIME="3600000"
EMAIL_VERIFICATION_TOKEN_LIFETIME="86400000"

# Rate Limiting API
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# System Configuration
SYSTEM_NAME="DigiUrban"
SYSTEM_VERSION="2.0.0"
ADMIN_EMAIL="admin@digiurban.com.br"

# Upload Configuration
MAX_FILE_SIZE="10485760"
UPLOAD_DIR="./uploads"

# Logs Configuration
LOG_LEVEL="info"
LOG_FORMAT="json"